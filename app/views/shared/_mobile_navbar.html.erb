<div class="bottom-nav">
    <div class="d-flex justify-content-between">
      <%= link_to missions_path, class: 'text-decoration-none flex-fill' do %>
        <p class="<?=(site_url('/missions(.:format)')==$current_url)?'active-tab':''?>"><i class="fas fa-home"></i></p>
      <% end %>
      <%= link_to campaigns_path, class: 'text-decoration-none flex-fill' do %>
        <p class="<?=(site_url('/campaigns(.:format)')==$current_url)?'active-tab':''?>"><i class="fas fa-search"></i></p>
      <% end %>
      <% if current_user %>
        <%= link_to user_path(current_user), class: 'text-decoration-none flex-fill' do %>
            <p class="<?=(site_url('/users/:id(.:format)')==$current_url)?'active-tab':''?>"><i class=" fas fa-user"></i></p>
         <% end %>
      <% end %>
    </div>
</div>



<div class="container">
  <div class="d-flex align-items-center justify-content-between">
    <h3>Edit instruction</h3>
  </div>
  <%= simple_form_for @instruction do |f| %>
    <p>Edit title & a picture</p>
    <%= f.input :title, label: false, input_html: { class: "col-12 mb-3" }, placeholder: "Title" %>
    <%= f.input :media, as: :file, label: false, input_html: { class: "input col-12 mb-3" } %>
    <br>
    <p>Edit instructions</p>
    <%= f.rich_text_area :rich_content, label: false, input_html: { class: "col-12 mb-3" }, placeholder: "Content" %>
    <br>
    <p>Change the displayed order</p>
    <%= f.input :step_order, collection: (1..20), label: false, input_html: { class: "col-12 mb-3" } %>
    <div class='d-flex justify-content-end mb-3'>
      <%= link_to 'Cancel', instruction_path(@instruction), class: "btn btn-outline-primary rounded-pill d-block mt-3 plastroc-outline-button mr-3" %>
      <%= link_to 'Delete', instruction_path(@instruction), method: :delete, class: "btn btn-outline-danger rounded-pill d-block mt-3 plastroc-outline-button mr-3" %>
      <%= f.submit "Update", class: "btn btn-primary rounded-pill d-block mt-3 plastroc-button plastroc-light-shadow" %>
    </div>
  <% end %>
</div>

<div class="container" style="margin-bottom: 75px">

<!-- Card of the Material -->
  <div class="card card-m mt-3">
    <% if @material.photo.attached? %>
      <%= cl_image_tag @material.photo.key%>
    <% else %>
      <img src="https://images.unsplash.com/photo-1536939459926-301728717817?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="">
    <% end %>
    <div class="card-body">
        <span class="badge badge-primary badge-pill"><%= @material.category %></span>
        <section>
          <div class="d-flex justify-content-between">
            <h6><%= @material.name %></h6>
            <%= link_to 'edit', edit_material_path(@material), class: "edit_icon ml-3" %>
          </div>
          <p><%= @material.description %></p>
        </section>
    </div>
  </div>

<!-- Main Action -->
  <div class="d-flex justify-content-between mb-0">
    <%= link_to 'retour', materials_path, class: "btn btn-secondary rounded-pill d-block mt-3 plastroc-button plastroc-light-shadow" %>
    <%= link_to 'âœš instruction', new_material_instruction_path(@material), class: "btn btn-primary rounded-pill d-block mt-3 plastroc-button plastroc-light-shadow" %>
  </div>

  <ul class="list-group mb-3">
    <% @material.instructions.order(:step_order).each do |instruction| %>
      <%= link_to edit_instruction_path(instruction), class: 'text-decoration-none' do %>
        <div class="d-flex flex-row card card-s mb-0 mt-2">
          <% if instruction.media.attached? %>
            <%= cl_image_tag instruction.media.key %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1536939459926-301728717817?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="">
          <% end %>
          <section class="d-flex justify-content-between align-items-center w-100">
            <h6 class="mb-0 mr-1" style='color: grey'><%= instruction.title %></h6>
            <span class="badge badge-secondary badge-pill"><%= instruction.step_order %></span>
          </section>
        </div>
      <% end %>
    <% end %>
  </ul>
</div>

<div class="home-banner mb-4" style="background-image: url(<%= image_path('leaf-illus.png') %>);">
  <div class="container">
    <div class="d-flex align-items-center justify-content-between">
      <h4 class='mt-3'>
        <%= link_to user_path(current_user) do %>
          <i class="fas fa-arrow-left text-light"></i>
        <% end %>
      </h4>
      <h3 class="mt-3">Mat√©riaux</h3>
      <div class="circle d-flex justify-content-center align-items-center plastroc-text-shadow mr-2">
        <%= link_to new_material_path, class: 'p-3' do %>
            <i class="fas fa-plus text-primary plastroc-text-shadow"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container" style="margin-bottom: 75px;">
  <hr class="mb-3">
  <ul class="list-group">
    <% @materials.each do |material| %>
      <%= link_to material_path(material), class: 'text-decoration-none' do %>
        <div class="d-flex flex-row card card-s mb-0 mt-2">
          <% if material.photo.attached? %>
            <%= cl_image_tag material.photo.key, crop: :fill %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1536939459926-301728717817?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="">
          <% end %>
          <section class="w-100">
            <div class="d-flex justify-content-between align-items-center">
              <h6 style='color: grey; max-width: 150px' class='text-truncate'><%= material.name %></h6>
              <span class="text-decoration-none badge badge-primary badge-pill mb-2"><%= material.category %></span>
            </div>
            <div style='color: grey; max-width: 230px' class='d-inline-block text-truncate'>
              <%= material.description %>
            </div>
          </section>
        </div>
      <% end %>
    <% end %>
  </ul>
</div>

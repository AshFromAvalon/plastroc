<div class="home-banner mb-4" style="background-image: url(<%= image_path('leaf-illus.png') %>);">
  <div class="container">
    <div class="d-flex align-items-center justify-content-between">
      <h4 class='mt-3'>
        <%= link_to user_path(current_user) do %>
          <i class="fas fa-arrow-left text-light"></i>
        <% end %>
      </h4>
      <h3 class="mt-3 flex-grow-1 text-left ml-5">Classement</h3>
    </div>
  </div>
</div>

<div class="container" style="margin-bottom: 75px;">
  <ul class="list-group">
    <% @users.order(:xp).reverse.each do |user| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <%= user.first_name %>
          <% if user == current_user %>
            <span class="badge badge-info badge-pill ml-3">you</span>
          <% elsif user.admin %>
            <span class="badge badge-dark badge-pill ml-3">admin</span>
          <% end %>
        </div>
        <div class="d-flex">
          <span class="badge badge-primary badge-pill"><i class="fas fa-trophy"></i> <%= user.xp %></span>
        </div>
      </li>
    <% end %>
</ul>
</div>

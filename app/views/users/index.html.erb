<div class="home-banner mb-4" style="background-image: url(<%= image_path('leaf-illus.png') %>);">
  <div class="container">
    <div class="d-flex align-items-center justify-content-between">
      <h4 class='mt-3'>
        <%= link_to missions_path do %>
          <i class="fas fa-arrow-left text-light"></i>
        <% end %>
      </h4>
      <h3 class="mt-3 flex-grow-1 text-left ml-5">Classement</h3>
    </div>
  </div>
</div>

<div class="container" style="margin-bottom: 75px;">
  <ul class="list-group">
    <% @top_50.each_with_index do |user, index| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <span class="mr-3"><%= "##{index + 1}."%></span><%= user.first_name %>
          <% if user == current_user %>
            <span class="badge badge-info badge-pill ml-3">you</span>
          <% elsif user.admin %>
            <span class="badge badge-dark badge-pill ml-3">admin</span>
          <% end %>
        </div>
        <div class="d-flex">
          <span class="badge badge-primary badge-pill"><i class="fas fa-chart-line"></i> <%= user.xp %></span>
        </div>
      </li>
    <% end %>
    <% if @top_50.count > 50 %>
      <li class="list-group-item d-flex justify-content-between align-items-center">...</li>
    <% end %>
    <% if !@top_50.include?(current_user) %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center">
            <span class="mr-3"><%= "##{@user_position}." %></span><%= current_user.first_name %>
            <% if current_user %>
              <span class="badge badge-info badge-pill ml-3">you</span>
            <% elsif current_user.admin %>
              <span class="badge badge-dark badge-pill ml-3">admin</span>
            <% end %>
          </div>
          <div class="d-flex">
            <span class="badge badge-primary badge-pill"><i class="fas fa-chart-line"></i> <%= current_user.xp %></span>
          </div>
        </li>
      <% end %>
      </div>
    </li>
</ul>
</div>





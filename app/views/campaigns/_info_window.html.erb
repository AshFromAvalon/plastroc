<h6><%= organisation.name %></h6>
<p><%= organisation.address %></p>
  <ul class="list-group">
  <% @organistion_active_campaigns.each do |campaign| %>
    <%= link_to campaign_path(campaign), class: 'text-decoration-none' do %>
      <li class="p-1 list-group-item d-flex justify-content-between align-items-center">
        <p class="p-0 mb-0 text-left col-9 text-truncate"><%= campaign.name %></p>
        <span class="col-3 badge badge-primary badge-pill text-truncate"><%= campaign.material.name %></span>
      </li>
    <% end %>
  <% end %>
</ul>

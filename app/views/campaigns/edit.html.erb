<div class="container" style="margin-bottom: 75px;">
  <div id="materials" data-materials="<%= @materials.to_json %>"></div>
  <h4 class="mt-3">Editer Campagne</h4>
  <%= simple_form_for [@organisation, @campaign] do |f| %>
    <%= f.input :name,
                label: false,
                placeholder: "Nom*",
                input_html: { class: "col-12 mb-3" } %>

    <%= f.input :description,
                label: false,
                placeholder: "Description*",
                input_html: { class: "col-12 mb-3" } %>

        <div class="form-row mb-3">
          <div class="d-flex">
            <div class="mr-1">
              <%= f.input :start_date,
                          label: "Date de dÃ©but",
                          placeholder: "jj/mm/aaaa",
                          as: :string,
                          required: false,
                          input_html: { class: "date-picker" } %>
            </div>

            <div class="ml-1">
              <%= f.input :end_date,
                          label: "Date de fin",
                          placeholder: "jj/mm/aaaa",
                          as: :string,
                          required: false,
                          input_html: { class: "date-picker", id: "secondRangeInput" } %>
            </div>
          </div>
        </div>

        <div class="form-row mb-3">
          <div class="d-flex">
            <div class="mr-2">
              <%= f.input :target,
                          label: "QuantitÃ© souhaitÃ©e",
                          placeholder: "500",
                          input_html: { min: '0', class: "input" } %>
            </div>
            <%= f.input :min_package,
                        label: "Minimum par trieur",
                        input_html: { min: '0', class: "input" } %>
          </div>
        </div>

    <%= f.input :unit,
                label: false,
                as: :radio_buttons,
                collection: Campaign::UNITS,
                boolean_style: :inline,
                collection_wrapper_tag: 'div',
                collection_wrapper_class: 'flex-nowrap d-flex',
                item_wrapper_class: 'unit-item flex-grow-1 align-self-stretch',
                input_html: {class: 'unit-selector'} %>

    <%= f.input :photo,
                    as: :file,
                    input_html: { class: "d-none", id: 'photo-input' },
                    label_html: { class: 'upload-photo col-12 text-center'},
                    label: 'ðŸ“· Choisissez une photo' %>
    <%= image_tag "", width: 300, class: "hidden mx-auto mb-2", id: "photo-preview" %>

    <%= f.submit 'Valider', class: "mt-2 btn btn-primary rounded-pill d-block plastroc-button plastroc-light-shadow col-12 mb-3" %>
  <% end %>
  <%= link_to 'Annuler', dashboard_campaign_path(@campaign), class: "btn btn-outline-primary rounded-pill d-block mt-3 plastroc-outline-button" %>
</div>


<div class="map-container">
    <div id="map"
        style="width: 100%; height: 55vh;"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <div class="map-transition">
    </div>
</div>
<h4 class="text-center page-title">Missions</h4>
<div class="campaigns-wrapper" style="margin-bottom: 45px;">
    <% @campaigns.each do |campaign| %>
        <div class="campaign-card d-flex flex-row card card-s mr-3 col-11">
            <img src="https://images.unsplash.com/photo-1536939459926-301728717817?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80"
                alt="">
            <section>
                <h6><%= campaign.name %></h6>
                <div class="text-right"><%= link_to 'More infos', campaign_path(campaign), class: 'btn btn-outline-primary' %></div>
            </section>
        </div>
    <% end %>
</div>

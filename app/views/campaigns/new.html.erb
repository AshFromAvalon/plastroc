<div class="container">
  <h4 class="mt-3">New Campaign</h4>
  <%= simple_form_for [@organisation, @campaign] do |f| %>
    <%= f.input :name,
                label: false,
                placeholder: "name*",
                input_html: { class: "col-12 mb-3" } %>

    <%= f.input :description,
                label: false,
                placeholder: "description*",
                input_html: { class: "col-12 mb-3" } %>

    <%= f.input :start_date,
                as: :string,
                required: false,
                input_html: { class: "date-picker col-12 mb-3" } %>

    <%= f.input :end_date,
                as: :string,
                required: false,
                input_html: { class: "date-picker col-12 mb-3" } %>

    <%= f.association :material,
                      as: :radio_buttons,
                      collection: @materials,
                      label: false,
                      input_html: { class: "col-12 mb-3" } %>

    <%= f.input :target,
                label: false,
                placeholder: "target quantity*",
                input_html: { class: "input col-12 mb-3" } %>

    <%= f.input :unit,
                label: false,
                as: :radio_buttons,
                collection: Campaign::UNITS,
                boolean_style: :inline,
                collection_wrapper_tag: 'div',
                collection_wrapper_class: 'unit-wrapper',
                item_wrapper_class: 'unit-item',
                input_html: {class: 'unit-selector'} %>

    <%= f.input :min_package,
                label: false,
                placeholder: "minimum quantity for a mission*",
                input_html: { class: "col-12 mb-3" } %>

    <%= f.input :photo,
                as: :file,
                input_html: { class: "input col-12 mb-3" } %>

    <%= f.submit 'create', class: "btn btn-primary rounded-pill d-block plastroc-button plastroc-light-shadow col-12 mb-3" %>
  <% end %>
</div>

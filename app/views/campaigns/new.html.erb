<div class="container" style="margin-bottom: 75px;">
  <div id="materials" data-materials="<%= @materials.to_json %>"></div>
  <h4 class="mt-3">Nouvelle Campagne</h4>
  <%= simple_form_for [@organisation, @campaign] do |f| %>
    <%= f.input :name,
                label: false,
                placeholder: "Nom*",
                input_html: { class: "col-12 mb-3" } %>

    <%= f.input :description,
                label: false,
                placeholder: "Description*",
                input_html: { class: "col-12 mb-3" } %>

    <%= f.input :start_date,
                placeholder: "Début*",
                as: :string,
                required: false,
                input_html: { class: "date-picker col-12 mb-3" } %>

    <%= f.input :end_date,
                placeholder: "Fin*",
                as: :string,
                required: false,
                input_html: { class: "date-picker col-12 mb-3" } %>

    <%= f.input :material_category,
                placeholder: "Type de matière*",
                as: :select,
                collection: Material::CATEGORIES,
                input_html: { class: "col-12" } %>

    <%= f.association :material,
                      as: :radio_buttons,
                      collection: [],
                      label: false,
                      collection_wrapper_tag: 'div',
                      collection_wrapper_class: 'material-wrapper',
                      item_wrapper_class: 'material-item',
                      input_html: { class: 'material-selector' },
                      boolean_style: :inline %>
    <div class="d-flex justify-content-between">
      <div>
        <%= f.input :target,
                    label: false,
                    placeholder: "Objectif*",
                    input_html: { class: "input mb-3" } %>

        <%= f.input :min_package,
                    label: false,
                    placeholder: "Quantité minimum par mission",
                    input_html: { class: "col-12 mb-3" } %>
      </div>

      <%= f.input :unit,
                  label: false,
                  as: :radio_buttons,
                  collection: Campaign::UNITS,
                  boolean_style: :inline,
                  collection_wrapper_tag: 'div',
                  collection_wrapper_class: 'unit-wrapper flex-nowrap w-100',
                  item_wrapper_class: 'unit-item',
                  input_html: {class: 'unit-selector'} %>
    </div>


    <%= f.input :photo,
                as: :file,
                input_html: { class: "input col-12 mb-3" } %>

    <%= f.submit 'Valider', class: "btn btn-primary rounded-pill d-block plastroc-button plastroc-light-shadow col-12 mb-3" %>
  <% end %>


  <%= link_to 'Annuler', organisation_path(@organisation), class: "btn btn-outline-primary rounded-pill d-block mt-3 plastroc-outline-button" %>
</div>

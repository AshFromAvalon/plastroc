<div class="container">
  <h4 class="mt-3">New Organisation</h4>
  <%= simple_form_for(@organisation) do |f| %>
    <div class="input mb-3">
      <%= f.text_field :name, placeholder: "name", class: "input col-12" %>
    </div>
    <div class="input mb-3">
      <%= f.text_field :address, placeholder: "address", class: "input col-12" %>
    </div>
    <div class="input mb-3">
      <%= f.text_field :city, placeholder: "city", class: "input col-12" %>
    </div>
    <div class="input mb-3">
      <%= f.text_field :postcode, placeholder: "postcode", class: "input col-12" %>
    </div>
    <div class="input mb-3">
      <%= f.text_area :about, placeholder: "Tell us about what you do...", class: "input col-12" %>
    </div>
    <div class="input mb-3">
      <%= f.text_field :opening_hours, placeholder: "opening hours: 8am to 6pm", class: "input col-12" %>
    </div>
    <div class="input mb-3">
      <%= f.text_field :contact, placeholder: "contact", class: "input col-12" %>
    </div>
    <div class="input mb-3">
      <%= f.label "logo", class: "d-block" %>
      <%= f.file_field :photo, class: "input col-12" %>
    </div>
    <div class="input mb-3">
      <%= f.submit link_to 'create', organisations_path(@organisation), class: "btn btn-primary rounded-pill d-block mt-3 plastroc-button plastroc-light-shadow col-12" %>
    </div>
  <% end %>
</div>


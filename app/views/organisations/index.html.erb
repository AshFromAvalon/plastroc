<div class="container">
  <h3 class="mt-3 mb-3">Organisations</h3>

  <% @organisations.each do |org| %>
    <div class="container">
      <div class="card card-m mb-3">
        <%= cl_image_tag org.photo.key %>
        <section>
          <h6><%= org.name %></h6>
          <p><%= org.about %></p>
          <p><%= org.address %>, <%= org.city %>, <%= org.postcode %></p>
          <p><%= org.opening_hours %></p>
          <p><%= org.contact %></p>
          <% if policy(org).update? %>
            <%= link_to 'Edit',
                        edit_organisation_path(org),
                        class: 'btn btn-primary rounded-pill d-block mt-3 plastroc-button plastroc-light-shadow' %>
          <% end %>
          <% if policy(org).destroy? %>
            <button id="delete-organisation" class="btn btn-outline-danger btn-block rounded-pill mt-2 plastroc-button">Delete</button>
            <%= link_to "",
                        organisation_path(org),
                        method: :delete,
                        # data: { confirm: "Are you sure?" },
                        id: "delete-orga",
                        class: 'hidden' %>
          <% end %>
        </section>
      </div>
    </div>
  <% end %>
</div>

<div class="container" style="margin-bottom: 75px;">
  <div class="d-flex align-items-center justify-content-left">
    <h4 class='mt-3 mr-3'>
      <%= link_to user_path(current_user) do %>
        <i class="fas fa-arrow-left"></i>
      <% end %>
    </h4>
    <h4 class="mt-3">Toutes les organisations</h4>
  </div>

  <ul class="list-group">
    <% @organisations.each do |organisation| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <%=  organisation.name  %>
          <% if organisation.user == current_user %>
            <i class="fas fa-star"></i>
          <% end %>
        </div>
        <div class= "d-flex">
          <span class="badge badge-primary badge-pill mr-1"><%=  organisation.user.first_name  %></span>
          <span class="badge badge-secondary badge-pill"><%=  organisation.campaigns.count  %> cpn</span>
        </div>
      </li>

    <% end %>
  </ul>
</div>

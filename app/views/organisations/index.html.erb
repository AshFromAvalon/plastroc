<div class="home-banner mb-4" style="background-image: url(<%= image_path('leaf-illus.png') %>);">
  <div class="container">
    <div class="d-flex align-items-center justify-content-between">
      <h4 class='mt-3'>
        <%= link_to user_path(current_user) do %>
          <i class="fas fa-arrow-left text-light"></i>
        <% end %>
      </h4>
      <h3 class="mt-3 flex-grow-1 text-left ml-5">Toutes les organisations</h3>
    </div>
  </div>
</div>

<div class="container" style="margin-bottom: 75px;">

  <ul class="list-group">
    <% @organisations.each do |organisation| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <%=  organisation.name  %>
          <% if organisation.user == current_user %>
            <i class="fas fa-star"></i>
          <% end %>
        </div>
        <div class= "d-flex">
          <span class="badge badge-primary badge-pill mr-1"><%=  organisation.user.first_name  %></span>
          <span class="badge badge-secondary badge-pill"><%=  organisation.campaigns.count  %> cpn</span>
        </div>
      </li>

    <% end %>
  </ul>
</div>

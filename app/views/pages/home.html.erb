<div class='container'>
  <h1>Plastroc</h1>
  <% if user_signed_in? %>
    <%= link_to "Vous êtes connecté, retournez au recyclage", campaigns_path, class: 'btn btn-primary rounded-pill d-block mt-3 plastroc-button plastroc-light-shadow' %>
  <% else %>
    <%= link_to "Je veux changer le monde", new_user_session_path, class: 'btn btn-primary rounded-pill d-block mt-3 plastroc-button plastroc-light-shadow' %>
    <%= link_to "Je change déjà le monde", new_user_session_path, class: "btn btn-outline-primary rounded-pill d-block mt-3 plastroc-outline-button" %>
  <% end %>
</div>

<div id="sliding-card">
  <button href="#" id="CTA" style="border-radius: 12px 12px 0px 0px" class='plastroc-button-sticky-bottom btn btn-primary d-block mt-3 plastroc-button plastroc-light-shadow w-100 py-3'>
    Rejoindre la campagne
  </button>

  <div id="bottom-text" class="container text-open">
      <h5>Choisissez la mission</h5>

    <div class="modal-body package-grid">
      <% 4.times do %>
        <div class="package-badge package-badge-square my-2">
          <div class="container p-3">
              <h6>package name</h6>
              <div class="d-flex justify-content-between align-items-center text-center mt-3">
                  <div>
                      <i class="fas fa-weight-hanging text-primary mb-2"></i>
                      <p><strong>10 kg</strong></p>
                  </div>
                  <div>
                      <i class="fas fa-angle-double-up text-primary mb-2"></i>
                      <p>10</p>
                  </div>
              </div>
          </div>
        </div>
    <% end %>

    </div>
  </div>

</div>

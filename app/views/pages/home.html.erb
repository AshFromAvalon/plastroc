<div class="container">
  <h1>Components</h1>
  <p>Find me in app/views/pages/home.html.erb</p>

  <%# Buttons %>
  <h4>Buttons</h4>
  <a href="#" class=' btn btn-primary rounded-pill d-block mt-3 plastroc-button plastroc-light-shadow'>Button primary</a>
  <a href="#" class='btn btn-outline-primary rounded-pill d-block mt-3 plastroc-outline-button'>Button primary outlined</a>

  <%# Inputs %>
  <h4 class="mt-5">Inputs</h4>
  <div class="input">
    <label for="" class="d-block">Input label</label>
    <input type="text" class="col-12" placeholder="Please type something">
  </div>

  <h6 class="mt-3">Select</h6>
  <div class="input mt-2">
    <label for="" class="d-block"><em>Please use Select2</em></label>
    <select type="select" class="col-12">
      <option value="">Please choose an option</option>
      <option value="dog">Dog</option>
      <option value="cat">Cat</option>
    </select>
  </div>

  <h6 class="mt-3">Checkbox</h6>
  <div>
    <label class="checkbox">One
      <input type="checkbox" checked="checked">
      <span class="checkmark"></span>
    </label>

    <label class="checkbox">Two
      <input type="checkbox">
      <span class="checkmark"></span>
    </label>

    <label class="checkbox">Three
      <input type="checkbox">
      <span class="checkmark"></span>
    </label>
  </div>

  <%# Progress bar %>
  <h4 class="mt-5">Progress Bar</h4>
  <div class="plastroc-progress-bar mt-4">
      <div class="rounded-pill plastroc-bg-primary-gradient"></div>
  </div>
</div>

<div class='container'>
  <h3>Accueil</h3>

  <!-- My organisations -->
  <% if !current_user.organisations.empty? %>
    <h4 class="mt-3">Mes Organisations</h4>
    <hr class="mb-3">
    <% @organisations.each do |org| %>
      <div class="container">
        <div class="card card-m mb-3">
          <%= cl_image_tag org.photo.key %>
          <section>
            <div class="d-flex justify-content-between">
              <h6><%= org.name %></h6>
                <% if policy(org).update? %>
                  <%= link_to ' ',
                              edit_organisation_path(org),
                              class: 'fas fa-edit ml-3' %>
                <% end %>
            </div>
            <p><%= org.about %></p>
            <p><i class="fas fa-map-marker-alt mr-2"></i><%= org.address %>, <%= org.city %>, <%= org.postcode %></p>
            <p><i class="fas fa-clock mr-2"></i><%= org.opening_hours %></p>
            <p><i class="fas fa-envelope mr-2"></i><%= org.contact %></p>
            <% if policy(Campaign).create? %>
              <%= link_to 'âœš Campagne',
                          new_organisation_campaign_path(org),
                          class: 'btn btn-primary rounded-pill d-block mt-3 plastroc-button plastroc-light-shadow' %>
            <% end %>
            <% if policy(org).destroy? %>
              <button data-id="<%= org.id %>" class="delete-organisation btn btn-outline-danger btn-block rounded-pill mt-2 plastroc-button">Supprimer</button>
              <%= link_to "",
                          organisation_path(org),
                          method: :delete,
                          # data: { confirm: "Are you sure?" },
                          class: 'delete-orga hidden',
                          id: "del-org-#{org.id}" %>
            <% end %>
          </section>
        </div>
      </div>
    <% end %>
  <% end %>

  <!-- Ongoing missions -->
  <h4 class="mt-3">Mes Missions</h4>
  <hr class="mb-3">
  <% if current_user.missions.empty? %>
    <p>No mission ongoing yet</p>
  </div>
  <% else %>
    <% current_user.missions.each do |mission| %>
      <%= mission %>
    <% end %>
  <% end %>

</div>

<!-- nav bar -->
<div class="bottom-nav">
    <div class="d-flex justify-content-between">
      <%= link_to missions_path, class: 'text-decoration-none flex-fill' do %>
        <p class="active-tab"><i class="fas fa-home"></i></p>
      <% end %>
      <%= link_to campaigns_path, class: 'text-decoration-none flex-fill' do %>
        <p class=""><i class="fas fa-search"></i></p>
      <% end %>
      <%= link_to user_path(current_user), class: 'text-decoration-none flex-fill' do %>
        <p class=""><i class=" fas fa-user"></i></p>
      <% end %>
    </div>
</div>

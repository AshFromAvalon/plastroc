<div class="home-banner">
   <h3 class="text-center py-4">Accueil</h3>
</div>
<div class='container'>

  <!-- My campaigns -->
  <% if !current_user.campaigns.empty? %>
    <div class='d-flex align-items-center justify-content-between mb-2'>
      <h4 class="mt-3">Mes campagnes</h4>
      <h4 class='mt-3'>
        <%= link_to new_campaign_path, class: 'mt-3 mb-1 mr-1' do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </h4>
    </div>
    <hr class="mb-3">
    <% @campaigns.each do |campaign| %>
      <%= link_to dashboard_campaign_path(campaign), class: 'text-decoration-none' do %>
        <div class="d-flex flex-row card card-s">
          <% if campaign.photo.attached? %>
            <%= cl_image_tag campaign.photo.key, crop: :fill %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1536939459926-301728717817?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="">
          <% end %>
          <section class="w-100">
            <div class="d-flex justify-content-between align-items-center">
              <h6 style='color: grey'><%= campaign.name %></h6>
              <span class="text-decoration-none badge badge-secondary badge-pill mb-2"><%= "#{campaign.status} campagne" %></span>
            </div>
            <p class='text-truncate' style='max-width: 215px'><%= campaign.organisation.address %></p>
          </section>
        </div>
      <% end %>
    <% end %>
  <% end %>

  <!-- Ongoing missions -->
  <h4 class="mt-5">Mes Missions</h4>
  <hr class="mb-3">
  <% if current_user.missions.empty? %>
    <p class='text-center'>üßê Pas encore de mission en cours...</p>
    <%= link_to 'Trouver une mission', campaigns_path, class: 'btn btn-outline-primary rounded-pill d-block mt-3 plastroc-outline-button w-100' %>
  <% else %>
    <% current_user.missions.each do |mission| %>
      <%= link_to mission_path(mission), class: 'text-decoration-none' do %>
        <div class="d-flex flex-row card card-s">
          <% if mission.package.campaign.photo.attached? %>
            <%= cl_image_tag mission.package.campaign.photo.key, crop: :fill %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1536939459926-301728717817?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="">
          <% end %>
          <section class="w-100">
            <div class="d-flex justify-content-between align-items-center">
              <h6 style='color: grey'><%= mission.package.campaign.name %></h6>
              <span class="text-decoration-none badge badge-secondary badge-pill mb-2 <%= mission.package.name.downcase %>"><%= mission.package.name %></span>
              <span class="text-decoration-none badge badge-success badge-pill mb-2 text-white"><%= mission.package.xp_reward %>xp</span>
            </div>
            <p class='text-truncate' style='max-width: 215px'><%= mission.package.campaign.organisation.address %></p>
          </section>
        </div>
      <% end %>
    <% end %>
  <% end %>

  <!-- Si pas d'campaigns, possibilit√© d'en cr√©er une premi√®re -->
  <% if current_user.campaigns.empty? %>
  <hr class="mb-3">
  <p class='text-center'>‚ôªÔ∏è Vous √™tes recycleur?</p>
    <%= link_to 'Cr√©er une premi√®re campagne de recyclage', new_campaign_path, class: 'btn btn-outline-primary rounded-pill d-block mt-3 plastroc-outline-button w-100' %>
  <% end %>

</div>

<!-- nav bar -->
<div class="bottom-nav">
    <div class="d-flex justify-content-between">
      <%= link_to missions_path, class: 'text-decoration-none flex-fill' do %>
        <p class="active-tab"><i class="fas fa-home"></i></p>
      <% end %>
      <%= link_to campaigns_path, class: 'text-decoration-none flex-fill' do %>
        <p class=""><i class="fas fa-search"></i></p>
      <% end %>
      <%= link_to user_path(current_user), class: 'text-decoration-none flex-fill' do %>
        <p class=""><i class=" fas fa-user"></i></p>
      <% end %>
    </div>
</div>
